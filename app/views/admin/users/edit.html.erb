<div class = "wrapper">
<div class = "form_wrapper">
<h1>Edit User:</h1>
<%= save_issue_output %>
<%= error_with_omniauth_output %>
<%= form_for [:admin, @user] do |f|%>
    <label>User Name:</label></br>
    <%= f.text_field :name, placeholder: "Name", class: "form_field" %></br></br>
    <label>User Email:</label></br>
    <%= email_taken_output %>
    <%= f.email_field :email, placeholder: "Email", class: "form_field", :required => true %></br></br>

    <%= f.submit class: "button" %>
<% end %>
</div>
</div>