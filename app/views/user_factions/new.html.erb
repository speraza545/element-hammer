<div class = "wrapper">
<div class = "form_wrapper">
 <h1>New Army:</h1>
<%= save_issue_output %>
<%= army_name_taken_output %>
<%= error_with_omniauth_output %>
<%= form_for @user_user_faction, :url => user_user_factions_path do |f| %>
    <label> Army Name:</label></br>
    <%= f.text_field :army_name, placeholder: "Army Name", class: "form_field", :required => true %></br></br>
    <label> Faction:</label></br>
    <%= f.select :faction_id, @user_factions, :required => true %></br></br>

    <%= f.submit class: "btn btn-primary" %>
<% end %></br>
</div>
</div>
